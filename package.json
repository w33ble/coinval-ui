{
  "private": true,
  "name": "coinval-ui",
  "productName": "coinval",
  "description": "coinval interface",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "poi",
    "build": "poi build",
    "report": "poi build --bundle-report",
    "serve": "serve dist --single",
    "test": "cross-env NODE_ENV=test ava",
    "lint": "eslint *.js \"src/**/*.{js,vue}\" \"test/**/*.js\"",
    "lint:fix": "eslint --fix *.js \"src/**/*.{js,vue}\" \"test/**/*.js\"",
    "precommit": "lint-staged",
    "deploy:functions": "firebase deploy --only functions",
    "deploy": "npm run build && firebase deploy --only hosting"
  },
  "author": [
    "Joe Fleming <github.com/w33ble>"
  ],
  "babel": {
    "presets": [
      "vue-app"
    ]
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --fix",
      "git add"
    ]
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "./test/helpers/setup.js"
    ]
  },
  "dependencies": {
    "axios": "^0.16.2",
    "buefy": "^0.4.2",
    "firebase": "^4.1.3",
    "font-awesome": "^4.7.0",
    "offline-plugin": "^4.8.0",
    "vue": "^2.3.4",
    "vue-router": "^2.6.0",
    "vuefire": "^1.4.3"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "browser-env": "^2.0.31",
    "cross-env": "^5.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-config-vue": "^2.0.2",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.1",
    "eslint-plugin-react": "^7.0.1",
    "eslint-plugin-vue": "^2.0.1",
    "husky": "^0.13.4",
    "lint-staged": "^4.0.0",
    "node-sass": "^4.5.3",
    "poi": "^8.0.0",
    "poi-preset-bundle-report": "^1.0.1",
    "poi-preset-offline": "^8.0.0",
    "require-extension-hooks": "^0.2.0",
    "require-extension-hooks-babel": "^0.1.1",
    "require-extension-hooks-vue": "^0.3.1",
    "sass-loader": "^6.0.6",
    "serve": "^3.1.0"
  }
}
